<%
  const body = () => { %>
    <div style="display:flex;flex-direction:column;align-items:center;gap:18px;min-height:70vh;justify-content:center;">
      <%- include('partials/pageHeader', { title: 'Reset Password', subtitle: 'Enter your email address to receive a password reset link.' }) %>
      <form id="resetPasswordForm" data-validate method="post" action="/auth/reset_password" style="display:flex;flex-direction:column;gap:12px;background-color:#ffffff;padding:30px;border-radius:16px;box-shadow:0 10px 28px rgba(0,0,0,0.12);width:340px;">
        <label for="reset-email" style="display:flex;flex-direction:column;gap:6px;text-align:left;color:#013d37;font-weight:600;">
          Email
          <input type="email" id="reset-email" name="email" required placeholder="you@example.com" style="padding:10px 12px;border-radius:10px;border:1px solid rgba(1,125,113,0.35);" />
        </label>
        <label for="reset-password" style="display:flex;flex-direction:column;gap:6px;text-align:left;color:#013d37;font-weight:600;">
          New password
          <input type="password" id="reset-password" name="newPassword" required minlength="6" placeholder="New password" style="padding:10px 12px;border-radius:10px;border:1px solid rgba(1,125,113,0.35);" />
        </label>
        <button type="submit" style="background-color:#017d71;color:#ffffff;cursor:pointer;padding:10px;border-radius:10px;border:none;font-weight:600;">Reset password</button>
        <p style="margin:0;text-align:center;font-size:0.9rem;">Remember your password? <a href="/auth/login" style="color:#017d71;">Login</a></p>
      </form>
    </div>
  <% }; %>
<%- include('layouts/layout') %>
