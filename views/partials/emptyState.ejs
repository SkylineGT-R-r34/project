<div class="empty-state" style="text-align:center;padding:32px 24px;background:#ffffff;border-radius:16px;box-shadow:0 8px 24px rgba(0,0,0,0.08);border:1px solid rgba(1,125,113,0.15);max-width:520px;margin:0 auto;">
  <h2 style="margin:0 0 8px;color:#013d37;font-size:1.5rem;"> <%= title %> </h2>
  <p style="margin:0 0 16px;color:#4a4a4a;"> <%= message %> </p>
  <% if (ctaHref && ctaLabel) { %>
    <a href="<%= ctaHref %>" style="display:inline-block;padding:10px 18px;background-color:#017d71;color:#fff;border-radius:20px;"> <%= ctaLabel %> </a>
  <% } %>
</div>
