<%
  const featureCards = [
    {
      title: 'Track your wellbeing',
      text: 'Keep tabs on your daily mood and reflect on helpful notes to spot trends early.',
      href: '/moodTracking/moodTrackingPage',
      label: 'Open mood tracker'
    },
    {
      title: 'Discover campus events',
      text: 'Browse workshops, talks, and socials curated for your community.',
      href: '/events/event',
      label: 'Explore events'
    },
    {
      title: 'Connect with peers',
      text: 'Find classmates, grow your network, and support each other.',
      href: '/social',
      label: 'Visit social hub'
    }
  ];
  const body = () => { %>
    <section style="display:flex;flex-direction:column;gap:32px;">
      <%- include('partials/pageHeader', { title: title || 'CampusWell', subtitle: 'Your campus wellbeing companion in one friendly hub.' }) %>
      <div style="background:#ffffff;border-radius:18px;box-shadow:0 12px 32px rgba(0,0,0,0.12);padding:32px 28px;display:flex;flex-direction:column;gap:18px;">
        <p style="margin:0;color:#333;font-size:1rem;line-height:1.6;">
          CampusWell helps you stay grounded with simple tools for logging moods, signing up for events, and keeping in touch with your support circle.
        </p>
        <div style="display:flex;flex-wrap:wrap;gap:18px;">
          <% featureCards.forEach(card => { %>
            <div style="flex:1 1 220px;background:rgba(1,125,113,0.06);border-radius:14px;padding:20px;display:flex;flex-direction:column;gap:12px;min-width:220px;">
              <h2 style="margin:0;color:#013d37;font-size:1.2rem;"> <%= card.title %> </h2>
              <p style="margin:0;color:#4a4a4a;font-size:0.95rem;line-height:1.5;"> <%= card.text %> </p>
              <a href="<%= card.href %>" style="align-self:flex-start;padding:8px 16px;background-color:#017d71;color:#ffffff;border-radius:18px;font-size:0.9rem;"> <%= card.label %> </a>
            </div>
          <% }) %>
        </div>
      </div>
    </section>
  <% }; %>
<%- include('layouts/layout') %>
