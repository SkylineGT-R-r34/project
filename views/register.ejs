<%
  const body = () => { %>
    <div style="display:flex;flex-direction:column;align-items:center;gap:18px;min-height:70vh;justify-content:center;">
      <%- include('partials/pageHeader', { title: 'Register', subtitle: 'Create your CampusWell account to unlock events and wellbeing tools.' }) %>
      <form id="registerForm" data-validate style="display:flex;flex-direction:column;gap:12px;background-color:#ffffff;padding:30px;border-radius:16px;box-shadow:0 10px 28px rgba(0,0,0,0.12);width:340px;">
        <label for="register-name" style="display:flex;flex-direction:column;gap:6px;text-align:left;color:#013d37;font-weight:600;">
          Full name
          <input type="text" id="register-name" name="fullName" required placeholder="Jane Doe" style="padding:10px 12px;border-radius:10px;border:1px solid rgba(1,125,113,0.35);" />
        </label>
        <label for="register-email" style="display:flex;flex-direction:column;gap:6px;text-align:left;color:#013d37;font-weight:600;">
          Email
          <input type="email" id="register-email" name="email" required placeholder="you@example.com" style="padding:10px 12px;border-radius:10px;border:1px solid rgba(1,125,113,0.35);" />
        </label>
        <label for="register-password" style="display:flex;flex-direction:column;gap:6px;text-align:left;color:#013d37;font-weight:600;">
          Password
          <input type="password" id="register-password" name="password" required minlength="6" placeholder="Choose a password" style="padding:10px 12px;border-radius:10px;border:1px solid rgba(1,125,113,0.35);" />
        </label>
        <button type="submit" style="background-color:#017d71;color:#ffffff;cursor:pointer;padding:10px;border-radius:10px;border:none;font-weight:600;">Register</button>
        <p style="margin:0;text-align:center;font-size:0.9rem;">Already have an account? <a href="/auth/login" style="color:#017d71;">Login here</a></p>
      </form>
    </div>
  <% }; %>
<%- include('layouts/layout') %>
