<%
  const isDev = error && error.stack;
  const body = () => { %>
    <section class="page-section page-section--narrow">
      <%- include('partials/pageHeader', { title: message || 'Something went wrong', subtitle: 'We hit an unexpected snag while processing your request.' }) %>
      <div class="card card--spacious">
        <p class="card__text">Status code: <strong><%= error && error.status ? error.status : 500 %></strong></p>
        <p class="card__text">You can head back to the <a href="/">home page</a> or try the action again shortly.</p>
        <% if (isDev) { %>
          <details class="dev-details">
            <summary>Developer details</summary>
            <pre><%= error.stack %></pre>
          </details>
        <% } %>
      </div>
    </section>
  <% }; %>
<%- include('layouts/layout') %>
